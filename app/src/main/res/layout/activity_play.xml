<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootRL"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mybackground">


    <ImageButton
        android:id="@+id/imageButtonRat"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"

        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_alignTop="@+id/imageButtonCat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageButtonCat"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"

        app:srcCompat="@drawable/cat"
        android:layout_alignTop="@+id/imageButtonElephant"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButtonElephant"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"

        app:srcCompat="@drawable/elephant"
        android:layout_marginBottom="57dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <Button
        android:id="@+id/homeButton"
        android:textColor="#191d1d"
        android:textColorHighlight="#161515"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:onClick="main"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <ImageView
        android:id="@+id/imageViewOpp"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"

        app:srcCompat="@android:drawable/alert_dark_frame"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/imageButtonElephant"
        android:layout_alignEnd="@+id/imageButtonElephant" />

    <ImageView
        android:id="@+id/imageViewYou"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"

        app:srcCompat="@android:drawable/alert_dark_frame"

        android:layout_alignTop="@+id/imageViewOpp"
        android:layout_alignLeft="@+id/imageButtonRat"
        android:layout_alignStart="@+id/imageButtonRat" />

    <TextView
        android:id="@+id/resultTV"
        android:textColor="#1f4d4d"
        android:textColorHighlight="#161515"
        android:textSize="40dp"
        android:textStyle="bold"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fight!!!"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/homeButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/countTV"
        android:textColor="#678e8e"
        android:textColorHighlight="#161515"
        android:textSize="23dp"
        android:textStyle="bold"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round"
        android:layout_alignBottom="@+id/homeButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/vs"
        android:textColor="#3babab"
        android:textColorHighlight="#161515"
        android:textSize="40dp"
        android:textStyle="bold"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VS"
        android:layout_above="@+id/imageButtonCat"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp" />

    <TextView
        android:id="@+id/scoreYou"
        android:textColor="#b71941"
        android:textColorHighlight="#161515"
        android:textSize="15dp"
        android:textStyle="bold"
        android:background="@android:color/darker_gray"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You: 0"
        android:layout_above="@+id/scoreOpp"
        android:layout_alignLeft="@+id/scoreOpp"
        android:layout_alignStart="@+id/scoreOpp" />

    <TextView
        android:id="@+id/scoreOpp"
        android:textColor="#b71941"
        android:textColorHighlight="#161515"
        android:textSize="15dp"
        android:textStyle="bold"
        android:background="@android:color/darker_gray"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NPC: 0"
        android:layout_alignBottom="@+id/countTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

</RelativeLayout>


